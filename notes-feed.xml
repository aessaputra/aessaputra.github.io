---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
  <link href="{{ '/notes-feed.xml' | absolute_url }}" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}{{ site.baseurl }}/notes/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ '/notes-feed.xml' | absolute_url }}</id>
  <title type="html">{{ site.title | xml_escape }} - Notes</title>
  <subtitle>Digital garden notes and knowledge base</subtitle>
  {% assign sorted_notes = site.notes | where_exp: "note", "note.path contains 'Public'" | sort: 'date' | reverse %}
  {% for note in sorted_notes limit:20 %}
  {% if note.date %}
  <entry>
    <title type="html">{{ note.title | xml_escape }}</title>
    <link href="{{ note.url | absolute_url }}" rel="alternate" type="text/html" title="{{ note.title | xml_escape }}"/>
    <published>{{ note.date | date_to_xmlschema }}</published>
    <updated>{% if note.updated %}{{ note.updated | date_to_xmlschema }}{% else %}{{ note.date | date_to_xmlschema }}{% endif %}</updated>
    <id>{{ note.url | absolute_url }}</id>
    <content type="html" xml:base="{{ note.url | absolute_url }}">{{ note.content | xml_escape }}</content>
    {% if note.tags.size > 0 %}
    {% for tag in note.tags %}
    <category term="{{ tag | xml_escape }}"/>
    {% endfor %}
    {% endif %}
    <summary type="html">{{ note.content | strip_html | xml_escape | truncate: 280 }}</summary>
  </entry>
  {% endif %}
  {% endfor %}
</feed>
